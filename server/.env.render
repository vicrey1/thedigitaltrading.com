# Copy-ready backend environment variables for Render
# Copy these to your Render backend service environment variables

BREVO_API_KEY=your_brevo_api_key_here
CORS_ORIGIN=https://thedigitaltrading-frontend.onrender.com
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST=your_email_host
EMAIL_PASS=your_email_password
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=noreply@yourdomain.com
FRONTEND_URL=https://thedigitaltrading-frontend.onrender.com
JWT_SECRET=your_jwt_secret_here
MONGO_URI=your_mongodb_connection_string
NODE_ENV=production
PORT=10000

# Optional AWS S3 variables (if using file uploads)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=your_bucket_name

# Optional support upload settings
SUPPORT_MAX_FILE_SIZE=5242880
SUPPORT_ALLOWED_MIMES=image/png,image/jpeg,application/pdf

# Optional external services
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
BOT_SOCKET_URL=wss://thedigitaltrading-backend.onrender.com