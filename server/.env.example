# Example environment configuration for backend (copy to .env)

# Runtime
NODE_ENV=development
PORT=5001

# Database
MONGO_URI=your_mongodb_connection_string

# Authentication
JWT_SECRET=your_jwt_secret_here

# Email / SMTP
EMAIL_HOST=your_email_host
EMAIL_PORT=465
EMAIL_SECURE=true
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@yourdomain.com
BREVO_API_KEY=your_brevo_api_key_here

# CORS & URLs
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Optional external services
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET=your_bucket_name

# Support uploads (optional)
SUPPORT_MAX_FILE_SIZE=5242880
SUPPORT_ALLOWED_MIMES=image/png,image/jpeg,application/pdf

# Sockets (optional)
BOT_SOCKET_URL=ws://localhost:5001
